
@{
    ViewBag.Title = "ReportView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Stock-In Report 
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="tblStockReport">
                        <thead>
                            <tr>
                                <th>Item Name</th>
                                <th>Quantity</th>
                                <th>ItemUnit</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <script>
        $("#tblStockReport").dataTable({

            ajax:{
                type:"POST",
                url: '/StockReport/Reports',
                dataSrc: ""

            },

            columns: [
              {
                  data: "ItemName"
              },

              {
                  data: "Quantity"
              },
              {
                  data: "UnitTypes"
              },
              {
                  data: "ItemId",
                  render: function (data) {
                      debugger
                      return "<button class='btn btn-primary btn-sm billview' data-purchase-id=" + data + ">Generate Bill</button>  " 
               
                  }

              }
            ]
        });

    </script>

}
